<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.tictactoe.MainActivity"
    android:background="#263238">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/combo"
        android:text="TIC TAC TOE"
        android:textSize="64sp"
        android:textColor="#DCE0D9"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="90dp"/>

    <Button
        android:layout_width="237dp"
        android:layout_height="55dp"
        android:background="@drawable/singleuserbutton"
        android:fontFamily="@font/combo"
        android:text="Three by Three"
        android:textColor="#F1E3E4"
        android:textSize="24sp"
        android:onClick="goTo3by3Dialog"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="102dp"/>

    <Button
        android:layout_width="237dp"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@drawable/twouser"
        android:textColor="#F1E3E4"
        android:onClick="goTo5by5Dialog"
        android:fontFamily="@font/combo"
        android:text="Five By Five"
        android:textSize="24sp"/>




</LinearLayout>
